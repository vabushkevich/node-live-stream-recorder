{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ES2020"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@constants": [
        "src/constants"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@types": [
        "src/types"
      ],
      "@utils": [
        "src/utils"
      ]
    },
    "rootDir": "./src",
    "target": "ES2019"
  }
}