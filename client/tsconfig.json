{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build/",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@constants": [
        "src/constants.ts"
      ],
      "@hooks": [
        "src/hooks.ts"
      ],      
      "@sass/*": [
        "src/sass/*"
      ],
      "@types": [
        "src/types"
      ],
      "@utils": [
        "src/utils.ts"
      ]
    },
    "target": "es6"
  }
}